{
  "version": "0.0.3",
  "name": "@chlbri/bemedev-news1-services",
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "chlbri",
    "url": "https://bemedev.vercel.app"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/beme-news1-services"
  },
  "files": [
    "lib",
    "public"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "config": "pnpm install",
    "rollup": "rollup -c",
    "prepare": "husky install",
    "build": "rm -rf lib && pnpm run rollup",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "remove": "rm -rf lib node_modules pnpm-lock.yaml",
    "clean": "pnpm run remove && pnpm run config",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@bemedev/x-test": "0.2.0",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "git-last-commit": "^1.0.1",
    "husky": "^8.0.2",
    "onchange": "^7.1.0",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.7.4",
    "rollup-plugin-node-externals": "^5.0.3",
    "rollup-plugin-tsconfig-paths": "^1.4.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "3.2.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "0.25.2"
  },
  "dependencies": {
    "@bemedev/fsf": "^0.6.2",
    "@xstate/immer": "^0.3.1",
    "immer": "^9.0.16",
    "node-fetch": "^3.3.0",
    "xstate": "4.35.1",
    "zod": "^3.20.2"
  }
}
